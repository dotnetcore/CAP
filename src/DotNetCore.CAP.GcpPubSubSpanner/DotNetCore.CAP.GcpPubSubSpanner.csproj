<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>DotNetCore.CAP.GcpPubSubSpanner</AssemblyName>
    <PackageTags>$(PackageTags);PubSub;GCP;Google Cloud PubSub;Google Spanner</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <WarningsAsErrors>NU1605;NU1701</WarningsAsErrors>
    <NoWarn>NU1701;CS1591</NoWarn>
    <DocumentationFile>bin\$(Configuration)\netstandard2.0\DotNetCore.CAP.GcpPubSubSpanner.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Cloud.PubSub.V1" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DotNetCore.CAP\DotNetCore.CAP.csproj" />
  </ItemGroup>

</Project>